<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputModule.Frag_ItemSize"
    android:weightSum="1"
    android:gravity="bottom"
    android:paddingBottom="10dp">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/item_editText_Alto"
        android:layout_gravity="center_horizontal"
        android:hint="ALTO"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/item_editText_Ancho"
        android:layout_gravity="center_horizontal"
        android:hint="ANCHO"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/item_editText_Grosor"
        android:layout_gravity="center_horizontal"
        android:hint="GROSOR"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/item_editText_Peso"
        android:layout_gravity="center_horizontal"
        android:hint="PESO"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:id="@+id/imageViewOrientation"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/frag_item_boton_vertical"
        android:clickable="true" />

</LinearLayout>
