<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="udg.cucei.appcajacucei.InputModule.Frag_Container"
              android:orientation="vertical"
              android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/frag_container_icon"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIMENSIONES"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fcfcfc"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.80"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"/>

        <Spinner
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_container_sizes"

            android:layout_gravity="center_horizontal"
            android:spinnerMode="dialog"
            android:gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/edit_text_shape"
            android:id="@+id/textView_frg_cont_ancho_lbl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="ANCHO"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/edit_text_shape"
            android:text="LARGO"
            android:id="@+id/textView_frg_cont_largo_lbl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/edit_text_shape"
            android:text="ALTO"
            android:id="@+id/textView_frg_cont_alto_lbl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/edit_text_shape"
            android:text="CAPACIDAD"
            android:id="@+id/textView_frg_cont_capacidad_lbl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/edit_text_shape"
            android:text="PESO MAX"
            android:id="@+id/textView_frg_cont_pesomax_lbl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>
